subnet {{ redhat_linux_install_host_subnet }} netmask {{ redhat_linux_install_host_netmask }} {
    allow bootp;
    option routers {{ redhat_linux_install_host_gw }};
    option domain-name-servers {{ redhat_linux_install_dns_ip }};
    group {
        next-server {{ hostvars[groups['kickstart_servers'][0]].ansible_host }};
        filename "{{ redhat_linux_install_core_file_path }}";
        host {{ redhat_linux_install_hostname }} {
            hardware ethernet {{ redhat_linux_install_hardware_ethernet }};
            fixed-address {{ host_ip }};
            option host-name {{ redhat_linux_install_lpar_name }};
            option tftp-server-name "{{ hostvars[groups['kickstart_servers'][0]].ansible_host }}";
        }
    }
}
